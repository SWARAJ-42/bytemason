{
  "project": {
    "name": "Build a to-do list app",
    "description": "Create a to-do list application utilizing Next.js and Supabase to manage tasks with user authentication and real-time updates.",
    "techStack": [
      "Next.js 14",
      "Supabase",
      "TypeScript",
      "Tailwind CSS"
    ]
  },
  "frontendStructure": {
    "pages": {
      "/": {
        "type": "SSR",
        "components": [
          "Header",
          "TaskList",
          "TaskForm",
          "Footer"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "User tasks"
        ]
      },
      "/login": {
        "type": "Static",
        "components": [
          "LoginForm",
          "AuthLinks"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/register": {
        "type": "Static",
        "components": [
          "RegisterForm",
          "AuthLinks"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      }
    },
    "components": {
      "shared": [
        "Button",
        "Input",
        "Modal",
        "Loader"
      ],
      "feature": [
        "TaskItem",
        "TaskFilter",
        "TaskPrioritySelector",
        "TaskReminder"
      ]
    }
  },
  "apiRoutes": {
    "tasks": {
      "/api/tasks": {
        "method": "POST",
        "middleware": [
          "auth checks"
        ],
        "validation": [
          "title is required",
          "userId is required"
        ],
        "supabase": "supabase.from('tasks').insert({ ... })",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/tasks/[id]": {
        "method": "DELETE",
        "middleware": [
          "auth checks"
        ],
        "validation": [],
        "supabase": "supabase.from('tasks').delete().match({ id })",
        "body": null,
        "response": null,
        "pagination": null
      }
    }
  },
  "supabaseConfig": {
    "tables": {
      "users": {
        "columns": {
          "id": "uuid",
          "email": "string",
          "password": "string"
        },
        "RLS": {
          "policy": "authenticated users can read their own data"
        }
      },
      "tasks": {
        "columns": {
          "id": "uuid",
          "title": "string",
          "description": "string",
          "userId": "uuid",
          "isCompleted": "boolean",
          "priority": "string",
          "dueDate": "timestamp"
        },
        "RLS": {
          "policy": "userId must match the authenticated user's id"
        }
      }
    },
    "indexes": [
      "CREATE INDEX idx_userId ON tasks(userId)",
      "CREATE INDEX idx_priority ON tasks(priority)",
      "CREATE INDEX idx_dueDate ON tasks(dueDate)"
    ]
  },
  "features": {
    "category": [
      "User registration and login with email and social authentication",
      "CRUD operations for tasks (Create, Read, Update, Delete)",
      "Real-time task updates using Supabase subscriptions",
      "Task prioritization and categorization features",
      "Due date and reminder functionality",
      "Responsive design for mobile and desktop access",
      "Search and filter options for tasks",
      "Task completion status tracking"
    ]
  },
  "environmentVariables": {
    "NEXT_PUBLIC_SUPABASE_URL": "string",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "string"
  },
  "acceptanceCriteria": [
    "Users can register with email and social accounts.",
    "Users can log in and log out securely.",
    "Tasks can be created, read, updated, and deleted.",
    "Real-time updates for task changes are reflected in the UI.",
    "Users can set due dates and reminders for tasks.",
    "Users can prioritize tasks and categorize them.",
    "Responsive layout works seamlessly on mobile and desktop devices.",
    "Functionality to search and filter tasks is implemented.",
    "Users can see a visual representation of task completion status."
  ]
}