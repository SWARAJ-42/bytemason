{
  "project": {
    "name": "To-Do List Application",
    "description": "A simple and functional to-do list application built using Next.js and Supabase for backend storage and authentication.",
    "techStack": [
      "Next.js 14",
      "Supabase",
      "TypeScript",
      "Tailwind CSS"
    ]
  },
  "frontendStructure": {
    "pages": {
      "/": {
        "type": "SSR",
        "components": [
          "Header",
          "TaskList",
          "TaskForm",
          "SearchBar",
          "ModeToggle"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "user's tasks"
        ]
      },
      "/tasks/[id]": {
        "type": "SSR",
        "components": [
          "Header",
          "TaskDetails"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "task details by id"
        ]
      },
      "/login": {
        "type": "Static",
        "components": [
          "LoginForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/register": {
        "type": "Static",
        "components": [
          "RegisterForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/settings": {
        "type": "SSR",
        "components": [
          "Header",
          "UserSettings"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "user settings"
        ]
      }
    },
    "components": {
      "shared": [
        "Header",
        "ModeToggle",
        "LoginForm",
        "RegisterForm",
        "SearchBar"
      ],
      "feature": [
        "TaskList",
        "TaskForm",
        "TaskDetails",
        "UserSettings"
      ]
    }
  },
  "apiRoutes": {
    "tasks": {
      "/api/tasks": {
        "method": "POST",
        "middleware": [
          "auth checks"
        ],
        "validation": [
          "title: required",
          "description: optional",
          "due_date: optional"
        ],
        "supabase": "insert into tasks",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/tasks/[id]": {
        "method": "DELETE",
        "middleware": [
          "auth checks"
        ],
        "validation": [],
        "supabase": "delete from tasks where id = id and user_id = current_user_id",
        "body": null,
        "response": null,
        "pagination": null
      }
    },
    "auth": {
      "/api/auth/register": {
        "method": "POST",
        "middleware": [],
        "validation": [
          "email: required",
          "password: required"
        ],
        "supabase": "create user with email and password",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/auth/login": {
        "method": "POST",
        "middleware": [],
        "validation": [
          "email: required",
          "password: required"
        ],
        "supabase": "authenticate user with email and password",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/auth/logout": {
        "method": "POST",
        "middleware": [
          "auth checks"
        ],
        "validation": [],
        "supabase": "logout current user",
        "body": null,
        "response": null,
        "pagination": null
      }
    }
  },
  "supabaseConfig": {
    "tables": {
      "users": {
        "columns": {
          "id": "uuid",
          "email": "text",
          "password": "text",
          "created_at": "timestamp"
        },
        "RLS": {
          "policy": "user_id = auth.uid()"
        }
      },
      "tasks": {
        "columns": {
          "id": "uuid",
          "title": "text",
          "description": "text",
          "due_date": "timestamp",
          "completed": "boolean",
          "user_id": "uuid",
          "created_at": "timestamp"
        },
        "RLS": {
          "policy": "user_id = auth.uid()"
        }
      }
    },
    "indexes": [
      "CREATE INDEX ON tasks (user_id)",
      "CREATE INDEX ON tasks (created_at)"
    ]
  },
  "features": {
    "category": [
      "User account creation with email and password",
      "Task CRUD (Create, Read, Update, Delete) functionality",
      "Task categories or labels for organization",
      "Due dates and reminders for tasks",
      "User-specific task views (each user only sees their tasks)",
      "Task completion tracking and filtering",
      "Search functionality for tasks",
      "Dark mode and light mode toggle for user preference"
    ]
  },
  "dependencies": {
    "required": [
      "@supabase/supabase-js",
      "next-auth",
      "tailwindcss"
    ],
    "dev": [
      "typescript",
      "eslint",
      "jest"
    ]
  },
  "environmentVariables": {
    "NEXT_PUBLIC_SUPABASE_URL": "string",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "string"
  },
  "acceptanceCriteria": [
    "Users can create accounts and log in",
    "Users can create, read, update, and delete tasks",
    "Tasks are displayed on the user's home page",
    "Each task can have a due date and reminders",
    "Users can filter and sort tasks based on completion status",
    "Tasks can be searched by title",
    "Application supports dark mode and light mode toggles"
  ]
}